pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                checkout scm
                sh 'mvn clean compile'
            }
        }

        stage('Test') {
            parallel {
                stage('Unit Tests') {
                    steps {
                        sh 'mvn test'
                    }
                }
                stage('Integration Tests') {
                    steps {
                        sh 'mvn verify -Pintegration-tests'
                    }
                }
            }
        }

        stage('Deploy to Staging') {
            steps {
                sh './deploy-to-staging.sh'
            }
        }

        stage('Run E2E Tests') {
            steps {
                sh './run-e2e-tests.sh'
            }
        }
    }
}

